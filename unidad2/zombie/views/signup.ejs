<% include _header %>

<h1> Registro de nuevo usuario</h1>

<h2> Ingresa tu información: </h2>
<form action="/signup" method="post">
    <div class="form-group">
        <input name = "username" type ="text" class="form-control"
        placeholder="Nombre de usuario" required autofocus />
    </div>
    <div class= "form-group">
        <input name="password" type ="password" class ="form-control"
        placeholder="Contraseña" required/>
    </div>
    
    <select class="form-control" name="role" type="text">
        <option>zombie-king</option>
        <option>zombie-queen</option>
        <option>zombie-boss</option>
        <option>zombie</option>
    </select>

    <div>
        <input type="submit" value="Registrarse" class="btn btn-primary btn-block"/>
    </div>
</form>

<% include _footer %>